public class DatabaseOperations {
    public String name; 
    
    public Credit_Card_Customer__c customer;
    public Credit_Card__c creditCard;
    public Bill__c bill;
    
    public DatabaseOperations() {
        customer = new Credit_Card_Customer__c();
        creditCard = new Credit_Card__c();
        bill = new Bill__c();
    }
    
    public Id createCustomer() {
        this.customer.Name = 'Inshant';
        this.customer.Email_Address__c = 'ishant@email.com';
        this.customer.Phone_Number__c = '423423422';
        INSERT this.customer;
        return this.customer.Id;
    }
    
    public Id createCreditCard() {
        this.creditCard.Card_Type__c = 'Silver Card';
        this.creditCard.Monthly_Card_Fees__c = 2.54;
        this.creditCard.Credit_Card_Limit__c = 20.10;
        this.creditCard.Transaction_Charge__c = 1.24;
        INSERT this.creditCard;
        return this.creditCard.Id;
    }
    
    public void createBill() {
        this.bill.Cash_Withdrawal__c = 1000;
        this.bill.Comments__c = 'This is generated by Apex';
        this.bill.Start_Date__c = Date.newInstance(2022, 1, 1);
        this.bill.End_Date__c = Date.newInstance(2022, 1, 31);
        this.bill.Total_Bill__c = 1500;
        this.bill.Credit_Card_Customer__c = createCustomer();
        this.bill.Credit_Card__c = createCreditCard();
        INSERT this.bill;  
    }
}